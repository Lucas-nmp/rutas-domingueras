{% extends 'base.html.twig' %}

{% block title %}Ruta{% endblock %}

{% block body %}
    <div class="administration">
        <h1>Ruta</h1>
        <hr>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ ruta.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ ruta.name }}</td>
                </tr>
                <tr>
                    <th>Date_ruta</th>
                    <td>{{ ruta.dateRuta ? ruta.dateRuta|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ ruta.description }}</td>
                </tr>
            </tbody>
        </table>

        <a class="btn btn-success" href="{{ path('app_ruta_index') }}"><i class="bi bi-box-arrow-in-left"></i></a>

        <a class="btn btn-primary" href="{{ path('app_ruta_edit', {'id': ruta.id}) }}"><i class="bi bi-pencil-square"></i></a>

        
    </div>
{% endblock %}
